# Database Configuration
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=orchestrator_pw
POSTGRES_DB=orchestrator
DATABASE_URL=postgresql://orchestrator:orchestrator_pw@postgres:5432/orchestrator

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
TZ=Europe/Chisinau
LOG_LEVEL=info

# API Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8080

# Scheduler Configuration
SCHEDULER_MISFIRE_GRACE_TIME=30
SCHEDULER_MAX_WORKERS=10

# Worker Configuration
WORKER_LEASE_SECONDS=60
WORKER_POLL_INTERVAL=0.5
WORKER_MAX_RETRIES=3
WORKER_BACKOFF_MAX_DELAY=60

# Security Configuration (Optional - for production)
# JWT_SECRET_KEY=your-secret-key
# API_KEY_HEADER=X-API-Key

# Monitoring Configuration (Optional)
# PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
# ENABLE_METRICS=true